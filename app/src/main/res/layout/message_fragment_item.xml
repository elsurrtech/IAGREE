<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_message_fragment"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:textColor="@color/white"
        android:text="username"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:id="@+id/username_message_fragment"
        android:layout_toEndOf="@+id/image_message_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/message_message_fragment"
        android:layout_toEndOf="@+id/image_message_fragment"
        android:layout_below="@+id/username_message_fragment"
        app:trimLength="50"
        app:trimMode="trimModeLength"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:text="message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_below="@+id/image_message_fragment"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>