<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".DetailsActivity">


    <LinearLayout
        android:id="@+id/l1"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textUniversity"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Select your University"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_arrow_down_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_below="@+id/l1"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textDegree"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Select your Degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_arrow_down_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_below="@+id/l2"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textProgramme"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Select your Programme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_arrow_down_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/textDetailsSure"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/l3"
        android:textColor="@color/white"
        android:text="Are you sure?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnDetailsNo"
        android:visibility="gone"
        android:backgroundTint="@color/black"
        android:text="No"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnDetailsYes"
        android:visibility="gone"
        android:text="Yes"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btnDetails"
        android:text="Ok"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/l3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textDetailsCanNotChanged"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnDetailsYes"
        android:textColor="@color/white"
        android:text="Note: It can not be changed further"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <ImageView
        android:src="@drawable/student"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="12sp"
        android:text="Image Credits: Freepik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_alignParentEnd="true"
        android:src="@drawable/mood"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>