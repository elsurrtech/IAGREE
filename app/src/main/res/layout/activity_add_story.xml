<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".AddStoryActivity">

    <ImageView
        android:id="@+id/image_add_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/btnBack_add_story"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_width="30dp"
        android:layout_margin="10dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/choose_another"
        android:text="Choose Another"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/r1"
        android:background="#20000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <EditText
            android:textColor="@color/black"
            android:id="@+id/description_add_story"
            android:hint="Add a Caption.."
            android:padding="15dp"
            android:textColorHint="#9c9c9c"
            android:maxLength="140"
            android:maxHeight="100dp"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/send_story"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_send"
        android:background="@color/bgColor"
        app:borderWidth="0dp"
        app:rippleColor="@color/white"
        android:elevation="5dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/r1"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>





</RelativeLayout>