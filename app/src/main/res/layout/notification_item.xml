<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginStart="10dp"
        android:id="@+id/image_notification_item"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_width="40dp"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image_notification_item"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_toStartOf="@+id/post_image_notification_item"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/userName_notification_item"
            android:text="username"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/notification_notification_item"
            android:text="notification"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:maxHeight="100dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/post_image_notification_item"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</RelativeLayout>